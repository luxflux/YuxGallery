%h1= t(".title")

%table
  %tr
    %th
    %th
    %th
  = @scans.each do |scan|
    %tr
      %td= link_to t(".show"), user_album_scan_path(@user, @album, scan)
      %td= link_to t(".edit"), edit_user_album_scan_path(@user, @album, scan)
      %td= link_to t(".destroy.text"), user_album_scan_path(@user, @album, scan), :confirm => t(".destroy.confirm"), :method => :delete

= link_to t(".new"), new_user_album_scan_path(@user, @album)

