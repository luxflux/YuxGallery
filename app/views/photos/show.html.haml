.photo
  .description
    %p
      %b Name:
      = yux_in_place_edit_text(photo_path(@photo), :model => @photo, :attribute => :name, :update_elements => [ @photo.name ])
    %p
      %b Description:
      = yux_in_place_edit_text(photo_path(@photo), :model => @photo, :attribute => :description)
    %p
      %b Date:
      = @photo.shot_at
    %p= destroy_link(@photo, "photos.destroy")
  .image
    = yux_link_to_with_photo(@photo.photo.size1.size2.normal.thumb.url, @photo.photo.size1.size2.url, :rel => :lightbox, :title => @photo.name, :id => "#{@photo.id}_image_version_400")
    = yux_link_to_with_photo(@photo.photo.size1.size2.normal.thumb.url, @photo.photo.size1.url, :rel => :lightbox, :title => @photo.name, :id => "#{@photo.id}_image_version_800")
    :javascript
      set_lightbox_image_which_fits("#{@photo.id}");
.clear
