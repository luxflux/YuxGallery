<%= form_for([:user,:album,@photo], :html => {:multipart => true}) do |f| %>
  <%= display_error_messages(@photo) %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :show_at %><br />
    <%= f.calendar_field :shot_at %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= image_tag(@photo.photo.thumb.url) if @photo.photo? %>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
