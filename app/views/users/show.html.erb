<%= content_for :title, @user.email %>

<% if current_user == @user %>
  <%= t(".current_user.there_are_albums", :count => @user.albums.length, :link => link_to(t(".current_user.link", :count => @user.albums.length), new_user_album_path(@user))).html_safe %>
<% else %>
  <%= t(".other_user.there_are_albums", :count => @user.albums.length) %>
<% end %>

<% if @user.albums.length > 0 %>
  <h3><%= t(".newest_albums") %></h3>
  <% tabs :type => :harmonica do %>
    <% @user.albums.all(:limit => 2, :order => :created_at).each do |album| %>
      <% tab album.name, :url => user_album_photos_path(@user,album) %>
    <% end %>
  <% end %>
<% end %>
