body {
  background-image:url(<%= asset_path "bg3.jpg" %>);
  color: #333;
}

body, p, ol, ul, td {
  font-family: verdana, arial, helvetica, sans-serif;
  font-size:   13px;
  line-height: 18px;
}

ul {
  padding-left: 0px;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

input, textarea, select {
  background-color: #d2b7ff;
  border: 1px solid #6000ff;
}
textarea {
  height: 150px;
}

a { color: #555; }
a:visited { color: #555; }

a img, a:hover img {
  border: 0px;
}

div.field, div.actions {
  margin-bottom: 10px;
}

#notice {
  color: green;
}

div.field_with_errors {
  display: inline;
}

.field_with_errors input {
  padding: 2px;
  background-color: #ffcdcd;
  border: 1px solid red;
}

#error_explanation {
  display: none;
  width: 450px;
  border: 1px solid red;
  padding: 24px;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #ffcdcd;
  box-shadow: 0px 2px 15px #333;
  -moz-box-shadow: 0px 2px 15px #333;
  -webkit-box-shadow: 0px 2px 15px #333;
}

#error_explanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 5px;
  font-size: 12px;
  margin: -24px;
  margin-bottom: 0px;
  background-color: #c00;
  color: #fff;
}

#error_explanation ul li {
  font-size: 12px;
  list-style: square;
}


div.photo div.description {
  float:left;
  width: 300px;
  text-align: left;
}

div.photo div.actions {
  float:right;
}

ul#actions {
  position: absolute;
  top: 0px;
  right: 0px;
  border: 1px solid #ffa200;
  border-top: 0px;
  border-right: 0px;
  background-color: #fffb84;
  padding: 5px;
  margin: 0px;
  list-style-type: none;
  z-index: 100;
}
ul#actions li {
  text-align: right;
}
ul#actions a {
  color: #ffa200;
  margin: 0px;
  text-decoration: none;
}
ul#actions ul {
  margin-top: 10px;
  list-style-type: none;
}

div#content {
  position: relative;
  margin:auto;
  width:850px;
  padding: 15px 15px 15px 15px;
  border: 1px solid #fff;
  box-shadow: 0px 2px 15px #333;
  -moz-box-shadow: 0px 2px 15px #333;
  -webkit-box-shadow: 0px 2px 15px #333;
  background-color: #fff;
}

ul.photo_collection {
  clear: both;
  padding: 0px;
}
ul.photo_collection li {
  list-style-type: none;
}
li a.with_photo {
  float: left;
  padding: 10px 10px 15px 10px;
  background: #eee;
  border: 1px solid #fff;
  box-shadow: 0px 2px 15px #333;
  -moz-box-shadow: 0px 2px 15px #333;
  -webkit-box-shadow: 0px 2px 15px #333;
  position: relative;
  text-decoration: none;
  width: 125px;
  height: 150px;
  margin: 32px;
}
li a.with_photo img {
  width: 125px;
  height: 125px;
}
li a.with_photo span {
  display: block;
  font-style:italic;
  font-size: 12px;
  margin-top: 10px;
}
div.clear {
  clear:both;
}

div#path {
  margin-bottom: 10px;
  padding-bottom: 20px;
}

ul.gallery_path li {
  list-style-type: none;
  display: inline;
  font-size: 250%;
}
ul.gallery_path li:before {
  content: " Â» "
}
ul.gallery_path li:first-child:before {
  content: ""
}

div#flash span {
  padding: 7px 10px 7px 10px;
  margin: 4px;
}
div#flash span.notice {
  background-color: #93ff93;
  color: green;
  border: 1px solid green;
}
div#flash span.alert {
  background-color: #ffcdcd;
  color: red;
  border: 1px solid red;
}

div#yield {
  margin: 10px 0px 10px 0px;
}

fieldset {
  margin-top: 0.5em;
  padding-top: 1.5em;
  border: 1px solid #6000ff;
}

fieldset legend {
  font-size: 2.5em;
}

div.right {
  float: right;
  width: 50%;
}
div.left {
  float: left;
  width: 50%;
}
